{% if item.type == 'lvm2' %}
<pool type='logical'>
{% else %}
<pool type='{{ item.type }}'>
{% endif %}
  <name>{{ item.name }}</name>
  {% if 'capacity' in item %}
  <capacity>{{ item.capacity }}</capacity>
  {% endif %}
  {% if item.type in ['logical', 'lvm2', 'zfs'] %}
  <source>
    <name>{{ item.source }}</name>
    {% if item.type in ['logical', 'lvm2'] %}
    <format type='lvm2'/>
    {% endif %}
  </source>
  {% endif %}
  {% if item.type != 'zfs' %}
  <target>
    <path>{{ item.path | default('placeholder_value') }}</path>
  </target>
  {% endif %}
</pool>
